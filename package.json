{
  "name": "@map-colonies/express-access-log-middleware",
  "version": "2.1.0",
  "description": "An access and error logger for express based on pino-http",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "test": "jest --config=./tests/configurations/jest.config.js",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prelint:fix": "npm run format:fix",
    "prelint": "npm run format",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json",
    "start": "npm run build && cd dist && node ./index.js",
    "clean": "rimraf dist",
    "prepublish": "npm run build",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MapColonies/express-access-log-middleware.git"
  },
  "author": "MapColonies",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MapColonies/express-access-log-middleware/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/MapColonies/express-access-log-middleware#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@map-colonies/eslint-config": "^4.0.0",
    "@map-colonies/prettier-config": "0.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.5.5",
    "@types/supertest": "^6.0.2",
    "commitlint": "^19.5.0",
    "eslint": "^8.16.0",
    "express": "^4.21.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-create-mock-instance": "^2.0.0",
    "jest-html-reporters": "^3.1.7",
    "prettier": "^3.3.3",
    "pretty-quick": "^4.0.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.4.4",
    "@map-colonies/tsconfig": "^1.0.0"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "http-status-codes": "^2.3.0",
    "pino-http": "^10.3.0"
  }
}
